{
  "manifest_version": 2,

  "name": "Trumpoon",
  "description": "Silliness for a better tomorrow.",
  "version": "1.0",

  "browser_action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_title": "Trumpoon"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": [
      "trumpoon.js"
    ],
    "run_at": "document_end"
  }]
}